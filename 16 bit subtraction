data segment

msg1 db 0ah,Odh, "first no:S"

msg2 db 0ah,0dh, "second nos"

msg3 db 0ah,0dh, "result:S"

ni db 07h dup(?)

n2 db 07h dup(?)

data ends

display macro msg

lea dx,msg

mov ah,09h

int 21h

endm

readDigit macro

mov ah,01h

int 21h

sub al,30h

endm

printdigit macro

add dl,30h

int 21h

endm

code segment

assume cs:code,ds:data

start:

mov ax,data

mov ds,ax

mov si, offset nl

mov di, offset n2

display msgl

mov cx,04h

first:

read Digit

mov[si],al

inc si

dec ex

jnz first

display msg2

mov cx,04h

second:

readDigit

mov[di].al

ine di

dec ex

jnz second

cle mov cx.04h

subtraction:

dec di

dec si

mov al, [si]

mov bl,[di]

sbb al.bl

mov ah,00h

aas

mov [di],al

dec.cx

jnz subtraction

display msg3

mov cx,04h

print:

mov dl,[di]

printDigit

inc di

dec cx

jnz print

mov ah,4ch

int 21h

code ends

end start

OUTPUT:

first no: 9999

second no; 4444

result: 8555
