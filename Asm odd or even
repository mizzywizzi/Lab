data segment

ml db 0ah,0dh,"enter the number:$"

m2 db 0ah,0dh, "the number is even:$"

m3 db 0ah,0dh, "the number is odd:$"

data ends

code segment

assume cs:code,ds:data

start:

mov ax,data

mov ds,ax

lea dx,ml

mov ah, 09h

int 21h

mov ah,0th

int 21h

add al,48

rer al,1

je odd

lea dx,m2

mov ah,09h

int 21h

jmp stop

odd:lea dx, m3

mov ah, 09h

int 21h

stop:mov ah,4ch

int 21h

code ends

end start

OUTPUT:

enter the number: 4

the number is even

enter the number: 3

the number is odd
